<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>Fantasy Edge Player Sorting</h1>
        </div>
        <div class="col-xs-12">
            <div class="row">
                {{#each player_data }}
                    <div class="row">
                        <div class="col-xs-12 text-center" id="playerStats">
                            <div class="col-xs-8 text-center">
                                {{this.Player}}
                            </div>
                            <div class="col-xs-4 text-center">
                                {{this.rawAdv}}
                            </div>
                        </div>
                    </div>
                {{/each}}
                <button type="button" class="btn btn-primary playerButton" id="text-enter-button">Show players</button>
                {{#each player_data }}
                    <div class="row gameSchedule">
                        <div class="col-xs-12 text-center">
                            <div class="col-xs-3 text-right">
                                {{this.gameid}}
                            </div>
                            <div class="col-xs-3 text-right">
                                {{this.dateGame}}
                            </div>
                            <div class="col-xs-3 text-right">
                                {{this.visitorTeam}}
                            </div>
                            <div class="col-xs-3 text-right">
                                {{this.homeTeam}}
                            </div>
                        </div>
                    </div>
                {{/each}}
                <button type="button" class="btn btn-primary scheduleButton" id="text-enter-button">Show Schedule</button>
            </div>
        </div>
    </div>
</div>