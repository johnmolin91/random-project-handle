<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>Fantasy Edge Player Sorting</h1>
        </div>
        <div class="col-xs-12">
            <div class="row">
                {{#each player_data }}
                    <div class="row">
                        <div class="col-xs-12 text-center"></div>
                            <div class="col-xs-8 text-right">
                                {{this.Player}}
                            </div>
                            <div class="col-xs-4 text-left">
                                {{this.rawAdv}}
                            </div>
                        </div>
                    </div>
                {{/each}}
                {{#each player_data }}
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <div class="col-xs-3 text-right">
                                {{this.gameid}}
                            </div>
                            <div class="col-xs-3 text-right">
                                {{this.dateGame}}
                            </div>
                            <div class="col-xs-3 text-right">
                                {{this.visitorTeam}}
                            </div>
                            <div class="col-xs-3 text-right">
                                {{this.homeTeam}}
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>